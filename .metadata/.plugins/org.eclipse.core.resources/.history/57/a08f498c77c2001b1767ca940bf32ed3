package kr.hs.study.controller;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;

@Controller
public class TestController {
	
	@RequestMapping(value="/sub/test2", method=RequestMethod.GET)
	public String test2() {
		System.out.println("test2");
		return "/WEB-INF/views/sub/test2.jsp";	//절대 경로: 루트에서 시작 webapp/WEB-INF/...
//		return "WEB-INF/views/sub/test2.jsp";	//상대 경로: 내 위치에서 시작 sub/webapp/WEB-INF/...
	}
	
	@RequestMapping(value="/sub/test3", method=RequestMethod.GET)
	public String test3() {
		System.out.println("test3");
		return "/WEB-INF/views/sub/test3.jsp";
	}

}
